@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<h1 class="text-center" style="font-weight: bold;font-size: 2rem;font-family: Arial, Helvetica, sans-serif;color:#145B18">Bentornato!</h1>
<div class="row">
    <div class="col-md-4 col-md-offset-2">
        <section>
            <!--<img src="~/Img/verticale1.jpg" />-->
        </section>
    </div>
    <div class="col-md-4">
        <section>
            <form id="account" method="post">
                <h2 style="font-family: Arial, Helvetica, sans-serif;color:#145B18" class="text-center">Usa le tue credenziali per entrare.</h2>
                <hr />
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-floating">
                    <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" />
                    <label asp-for="Input.Email" class="form-label"></label>
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="form-floating">
                    <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" />
                    <label asp-for="Input.Password" class="form-label"></label>
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div>
                    <p>
                        <label>
                            <input asp-for="Input.RememberMe" type="checkbox" checked/>
                            <span>Ricordami</span>
                        </label>
                    </p>
                </div>
                <div>
                    <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-primary" style="background-color:#4caf50;">Log in</button>
                </div>
                <br />
                <div>
                    <p>
                        <a id="forgot-password" asp-page="./ForgotPassword">Hai dimenticato la password?</a>
                    </p>
                    <p>
                        <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Non hai un account? Registrati</a>
                    </p>
                    <p>
                        <a id="resend-confirmation" asp-page="./ResendEmailConfirmation">Manda una nuova email di verifica</a>
                    </p>
                </div>
            </form>
        </section>
    </div>
    <div class="col-md-4 col-md-offset-2" style="padding-left:100px">
        <section>
            <!--<img src="~/Img/verticale2.jpg" />-->
        </section>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
